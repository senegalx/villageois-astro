---
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/HeroSection.astro';
import ContactForm from '../components/ContactForm';
---

<Layout title="Contact">
  <HeroSection
    title="Contactez-nous"
    description="Une question ? Un projet de collaboration ? N'hésitez pas à nous écrire, nous serons ravis d'échanger avec vous."
    backgroundImage="/assets/hero-contact.jpg"
  />

  <section class="py-20 bg-background">
    <div class="container mx-auto px-4">
      <div class="grid md:grid-cols-3 gap-12 max-w-6xl mx-auto">
        <div class="space-y-6">
          <div class="border-2 rounded-lg bg-card">
            <div class="flex flex-col space-y-1.5 p-6">
              <div class="bg-primary/10 w-12 h-12 rounded-lg flex items-center justify-center mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-primary"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
              </div>
              <h3 class="text-lg font-semibold leading-none tracking-tight">Email</h3>
            </div>
            <div class="p-6 pt-0">
              <a 
                href="mailto:contact@lesvillageois.org"
                class="text-muted-foreground hover:text-primary transition-smooth"
              >
                contact@lesvillageois.org
              </a>
            </div>
          </div>

          <div class="border-2 rounded-lg bg-card">
            <div class="flex flex-col space-y-1.5 p-6">
              <div class="bg-accent/10 w-12 h-12 rounded-lg flex items-center justify-center mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-accent"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
              </div>
              <h3 class="text-lg font-semibold leading-none tracking-tight">Téléphone</h3>
            </div>
            <div class="p-6 pt-0">
              <p class="text-muted-foreground">+224 XXX XXX XXX</p>
            </div>
          </div>

          <div class="border-2 rounded-lg bg-card">
            <div class="flex flex-col space-y-1.5 p-6">
              <div class="bg-secondary/10 w-12 h-12 rounded-lg flex items-center justify-center mb-3">
                <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="text-secondary"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
              </div>
              <h3 class="text-lg font-semibold leading-none tracking-tight">Adresse</h3>
            </div>
            <div class="p-6 pt-0">
              <p class="text-muted-foreground">
                Conakry, République de Guinée
              </p>
            </div>
          </div>
        </div>

        <div class="md:col-span-2 border-2 rounded-lg bg-card">
          <div class="flex flex-col space-y-1.5 p-6">
            <h3 class="text-2xl font-semibold leading-none tracking-tight">Envoyez-nous un message</h3>
            <p class="text-sm text-muted-foreground">
              Remplissez le formulaire ci-dessous et nous vous répondrons dans les plus brefs délais.
            </p>
          </div>
          <div class="p-6 pt-0">
            <ContactForm client:load />
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

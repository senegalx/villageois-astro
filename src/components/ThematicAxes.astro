---
const axes = [
  {
    icon: "laptop",
    title: "Alphabétisation numérique",
    description: "Former les citoyens guinéens aux technologies de l'information et de la communication pour réduire la fracture numérique.",
    color: "text-primary",
    bgColor: "bg-primary/10",
    link: "/themes"
  },
  {
    icon: "users",
    title: "Participation citoyenne",
    description: "Encourager l'engagement civique et la gouvernance participative à travers des outils numériques accessibles à tous.",
    color: "text-accent",
    bgColor: "bg-accent/10",
    link: "/themes"
  },
  {
    icon: "shield",
    title: "Lutte contre la désinformation",
    description: "Développer l'esprit critique et les compétences en fact-checking pour combattre les fausses informations.",
    color: "text-secondary",
    bgColor: "bg-secondary/10",
    link: "/themes"
  },
  {
    icon: "book",
    title: "Éducation citoyenne et populaire",
    description: "Promouvoir l'éducation civique accessible en langues locales pour renforcer la démocratie et les droits citoyens.",
    color: "text-institutional",
    bgColor: "bg-institutional/10",
    link: "/themes"
  }
];

const iconMap: Record<string, string> = {
  laptop: '<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect width="18" height="12" x="3" y="4" rx="2" ry="2"/><line x1="2" x2="22" y1="20" y2="20"/></svg>',
  users: '<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>',
  shield: '<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"/><path d="m9 12 2 2 4-4"/></svg>',
  book: '<svg xmlns="http://www.w3.org/2000/svg" width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 19.5v-15A2.5 2.5 0 0 1 6.5 2H20v20H6.5a2.5 2.5 0 0 1 0-5H20"/></svg>'
};
---

<section class="py-20 bg-background">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <h2 class="mb-4">Nos axes thématiques</h2>
      <p class="text-lg text-muted-foreground max-w-2xl mx-auto">
        Quatre piliers pour construire une Guinée connectée, informée et citoyenne
      </p>
    </div>

    <div class="grid md:grid-cols-2 gap-8 max-w-6xl mx-auto">
      {axes.map((axe) => (
        <div class="group hover:shadow-medium transition-smooth border-2 hover:border-primary/20 bg-card rounded-lg">
          <div class="flex flex-col space-y-1.5 p-6">
            <div class={`${axe.bgColor} w-16 h-16 rounded-xl flex items-center justify-center mb-4 group-hover:scale-110 transition-smooth`}>
              <div class={axe.color} set:html={iconMap[axe.icon]} />
            </div>
            <h3 class="text-2xl font-semibold leading-none tracking-tight">{axe.title}</h3>
          </div>
          <div class="p-6 pt-0 space-y-4">
            <p class="text-base leading-relaxed text-muted-foreground">
              {axe.description}
            </p>
            <a 
              href={axe.link}
              class="inline-flex items-center gap-2 hover:text-primary transition-smooth p-0 h-auto font-semibold text-foreground group/btn"
            >
              En savoir plus
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="group-hover/btn:translate-x-1 transition-smooth"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
            </a>
          </div>
        </div>
      ))}
    </div>

    <div class="text-center mt-12">
      <a
        href="/themes"
        class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium h-11 px-8 gradient-primary text-primary-foreground shadow-soft hover:shadow-medium transition-smooth"
      >
        Explorer tous nos axes
        <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
      </a>
    </div>
  </div>
</section>

---
import { Image } from 'astro:assets';

interface Props {
  src: string;
  alt: string;
  width?: number;
  height?: number;
  className?: string;
  loading?: 'lazy' | 'eager';
  fetchpriority?: 'auto' | 'high' | 'low';
}

const {
  src,
  alt,
  width = 800,
  height = 600,
  className = '',
  loading = 'lazy',
  fetchpriority = 'auto',
} = Astro.props;

// Fallback si pas d'image
if (!src) {
  return null;
}
---

<Image
  src={src}
  alt={alt}
  width={width}
  height={height}
  class={className}
  loading={loading}
  fetchpriority={fetchpriority}
/>

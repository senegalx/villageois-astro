---
interface Props {
  title: string;
  location: string;
  date: string;
  status: string;
  category: string;
  description: string;
  impact: string;
  beneficiaries: string;
  image: string;
}

const { title, location, date, status, category, description, impact, beneficiaries, image } = Astro.props;

const recentNews = [
  {
    title: "20 jeunes initiés au blogging",
    date: "4 Sept 2025",
    image: "/assets/news-blogging-training.jpg"
  },
  {
    title: "45 élèves formés à l'information",
    date: "26 Août 2025",
    image: "/assets/news-youth-media-training.jpg"
  },
  {
    title: "30 acteurs médiatiques formés",
    date: "27 Mai 2025",
    image: "/assets/news-factcheck-training.jpg"
  }
];
---

<section class="py-12 md:py-16 bg-gradient-to-br from-muted/30 via-background to-muted/20">
  <div class="container mx-auto px-4">
    <div class="mb-8">
      <span class="inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold bg-primary text-primary-foreground mb-4">Projet phare</span>
      <h2 class="text-3xl md:text-4xl font-bold mb-2">Notre projet à la une</h2>
      <p class="text-muted-foreground">Impact concret sur le terrain</p>
    </div>

    <div class="grid md:grid-cols-2 gap-8 items-center max-w-7xl mx-auto mb-16">
      <div class="relative group overflow-hidden rounded-xl shadow-medium">
        <img 
          src={image} 
          alt={title}
          class="w-full aspect-video object-cover group-hover:scale-105 transition-smooth"
        />
        <div class="absolute inset-0 bg-gradient-to-t from-background/80 via-background/20 to-transparent"></div>
        <span class="absolute top-4 left-4 inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold bg-accent text-accent-foreground">
          {status}
        </span>
        <span class="absolute top-4 right-4 inline-flex items-center rounded-full border px-2.5 py-0.5 text-xs font-semibold bg-primary/90 text-primary-foreground">
          {category}
        </span>
      </div>

      <div class="space-y-6">
        <h3 class="text-2xl md:text-3xl font-bold leading-tight">
          {title}
        </h3>

        <div class="flex flex-wrap gap-4 text-sm text-muted-foreground">
          <div class="flex items-center gap-1">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
            <span>{location}</span>
          </div>
          <div class="flex items-center gap-1">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M8 2v4"/><path d="M16 2v4"/><rect width="18" height="18" x="3" y="4" rx="2"/><path d="M3 10h18"/></svg>
            <span>{date}</span>
          </div>
        </div>

        <p class="text-muted-foreground text-lg leading-relaxed">
          {description}
        </p>

        <div class="grid grid-cols-2 gap-4 p-4 bg-muted/50 rounded-lg">
          <div class="space-y-1">
            <div class="flex items-center gap-2 text-primary">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="23 6 13.5 15.5 8.5 10.5 1 18"/><polyline points="17 6 23 6 23 12"/></svg>
              <span class="text-sm font-semibold">Impact</span>
            </div>
            <p class="text-sm text-muted-foreground">{impact}</p>
          </div>
          <div class="space-y-1">
            <div class="flex items-center gap-2 text-primary">
              <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 21v-2a4 4 0 0 0-4-4H6a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M22 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
              <span class="text-sm font-semibold">Bénéficiaires</span>
            </div>
            <p class="text-sm text-muted-foreground">{beneficiaries}</p>
          </div>
        </div>

        <a 
          href="/projects"
          class="inline-flex items-center justify-center gap-2 whitespace-nowrap rounded-md text-sm font-medium h-11 px-8 gradient-primary text-primary-foreground group"
        >
          En savoir plus
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="ml-2 group-hover:translate-x-1 transition-smooth"><path d="M5 12h14"/><path d="m12 5 7 7-7 7"/></svg>
        </a>
      </div>
    </div>

    <div>
      <h3 class="text-2xl font-bold mb-6">Actualités du projet</h3>
      <div class="grid md:grid-cols-3 gap-6">
        {recentNews.map((news) => (
          <div class="group hover:shadow-medium transition-smooth border-2 hover:border-primary/20 overflow-hidden cursor-pointer rounded-lg bg-card">
            <div class="aspect-video overflow-hidden">
              <img 
                src={news.image} 
                alt={news.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-smooth"
              />
            </div>
            <div class="flex flex-col space-y-1.5 p-6">
              <div class="flex items-center gap-2 text-sm text-muted-foreground mb-2">
                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M8 2v4"/><path d="M16 2v4"/><rect width="18" height="18" x="3" y="4" rx="2"/><path d="M3 10h18"/></svg>
                <span>{news.date}</span>
              </div>
              <h4 class="text-lg font-semibold leading-none tracking-tight group-hover:text-primary transition-smooth">
                {news.title}
              </h4>
            </div>
          </div>
        ))}
      </div>
    </div>
  </div>
</section>

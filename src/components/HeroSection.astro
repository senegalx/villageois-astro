---
interface Props {
  title: string;
  description: string;
  backgroundImage: string;
}

const { title, description, backgroundImage } = Astro.props;
---

<section class="relative py-20 md:py-28 overflow-hidden">
  <div class="absolute inset-0 z-0">
    <img 
      src={backgroundImage} 
      alt={title}
      class="w-full h-full object-cover opacity-40"
    />
    <div class="absolute inset-0 bg-gradient-to-br from-primary/8 via-background/70 to-accent/8"></div>
  </div>
  
  <div class="absolute inset-0 z-0 opacity-5">
    <svg class="w-full h-full" xmlns="http://www.w3.org/2000/svg">
      <defs>
        <pattern id="network-hero" x="0" y="0" width="100" height="100" patternUnits="userSpaceOnUse">
          <circle cx="50" cy="50" r="2" fill="currentColor" class="text-primary" />
          <circle cx="10" cy="10" r="2" fill="currentColor" class="text-primary" />
          <circle cx="90" cy="10" r="2" fill="currentColor" class="text-primary" />
          <circle cx="10" cy="90" r="2" fill="currentColor" class="text-primary" />
          <circle cx="90" cy="90" r="2" fill="currentColor" class="text-primary" />
          <line x1="50" y1="50" x2="10" y2="10" stroke="currentColor" stroke-width="0.5" class="text-primary" />
          <line x1="50" y1="50" x2="90" y2="10" stroke="currentColor" stroke-width="0.5" class="text-primary" />
          <line x1="50" y1="50" x2="10" y2="90" stroke="currentColor" stroke-width="0.5" class="text-primary" />
          <line x1="50" y1="50" x2="90" y2="90" stroke="currentColor" stroke-width="0.5" class="text-primary" />
        </pattern>
      </defs>
      <rect width="100%" height="100%" fill="url(#network-hero)" />
    </svg>
  </div>

  <div class="absolute top-10 right-10 w-72 h-72 bg-primary/10 rounded-full blur-3xl animate-pulse"></div>
  <div class="absolute bottom-10 left-10 w-96 h-96 bg-accent/10 rounded-full blur-3xl animate-pulse" style="animation-delay: 700ms;"></div>
  
  <div class="container mx-auto px-4 relative z-10">
    <div class="max-w-4xl">
      <div class="inline-block mb-4 px-4 py-1 bg-primary/10 rounded-full animate-fade-in">
        <span class="text-sm font-semibold text-primary">Villageois 2.0</span>
      </div>
      <h1 class="mb-6 text-4xl md:text-5xl lg:text-6xl font-bold leading-tight bg-gradient-to-r from-primary via-secondary to-accent bg-clip-text text-transparent animate-fade-in" style="animation-delay: 100ms;">
        {title}
      </h1>
      <p class="text-lg md:text-xl text-foreground/90 font-medium drop-shadow leading-relaxed animate-fade-in max-w-3xl" style="animation-delay: 200ms;">
        {description}
      </p>
      <slot />
    </div>
  </div>
</section>
